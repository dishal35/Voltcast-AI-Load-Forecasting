# Delhi Demand Forecasting API - Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
# For PostgreSQL:
DATABASE_URL=postgresql://user:password@localhost:5432/demand_forecast
# For SQLite (development):
# DATABASE_URL=sqlite:///./demand_forecast.db

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Weather API Configuration
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_PROVIDER=openweathermap
WEATHER_COORDS=28.6139,77.2090

# API Security
ADMIN_API_KEY=your_secure_random_api_key_here

# Model Configuration
MODEL_DIR=./artifacts

# Logging
LOG_LEVEL=INFO

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
